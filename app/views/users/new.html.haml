%body
  .single-container
    %header.single-header
      %h1
        =link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3942658967", alt: "mercari"),"https://www.mercari.com/jp/"
    %main.single-main
      %section.l-single-container
        %h2.l-single-head 新規会員登録
        .l-single-inner
          .l-single-content
            = link_to new_user_registration_path ,class: "btn-default btn-mail" do
              メールアドレスで登録
              %i.far.fa-envelope
            %button#facebook-login.btn-sns.btn-sns-facebook
              %i.fab.fa-facebook
              Facebookで登録
            %button#google-login.btn-sns.btn-sns-google
              %i.fab.fa-google-plus-g
              Googleで登録
    = render  "devise/shared/footer_devise"
